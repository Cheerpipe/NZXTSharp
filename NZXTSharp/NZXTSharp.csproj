<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.0-beta</Version>
    <Description>The one-stop C# sdk that facilitates interaction with NZXT devices.</Description>
    <Authors>Ari Madian</Authors>
    <Company />
    <PackageProjectUrl>https://github.com/akmadian/NZXTSharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/akmadian/NZXTSharp</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>NZXT, Hue+, Hue_Plus, Hue, Plus, SDK, NZXT_SDK, RGB, RGB_SDK</PackageTags>
    <PackageLicenseUrl>https://github.com/akmadian/NZXTSharp/blob/master/LICENSE</PackageLicenseUrl>
    <PackageIconUrl>https://i.imgur.com/0RWzc3b.png</PackageIconUrl>
    <NeutralLanguage>en-US</NeutralLanguage>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
    <PackageReleaseNotes>Added more effects
Added params
Added compatibility check to HuePlus ApplyEffect()
Added OnLogMessage event to HuePlus device</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Ports" Version="4.6.0-preview.18571.3" />
  </ItemGroup>

</Project>
